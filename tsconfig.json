{
  "include": [
    "./src/**/*",
    "./config/*.ts",
    "./gatsby-config.ts"
  ],
  "exclude": ["node_modules", "public", ".cache"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "typeRoots": [
    "src/@types",
    "node_modules/@types",
    "src/__generated__" /*gatsby-plugin-typegen */,
  ]
}
